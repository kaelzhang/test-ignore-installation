{
  "name": "test-ignore-installation",
  "private": true,
  "version": "1.0.0",
  "description": "A repo to test the installation of the ignore package",
  "main": "./src/index.mjs",
  "type": "module",
  "scripts": {
    "test": "NODE_DEBUG=test-ignore-installation nyc ava --timeout=10s --verbose",
    "test:dev": "NODE_DEBUG=test-ignore-installation nyc ava --timeout=10s --verbose && npm run report:dev",
    "lint": "eslint .",
    "fix": "eslint . --fix",
    "posttest": "npm run report",
    "report": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "report:dev": "nyc report --reporter=html && npm run report:open",
    "report:open": "open coverage/index.html"
  },
  "files": [
    "src/"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/kaelzhang/test-ignore-installation.git"
  },
  "keywords": [
    "test-ignore-installation"
  ],
  "engines": {
    "node": ">= 6"
  },
  "ava": {
    "files": [
      "test/*.test.js"
    ]
  },
  "author": "kaelzhang",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kaelzhang/test-ignore-installation/issues"
  },
  "devDependencies": {
    "@ostai/eslint-config": "^3.5.0",
    "ava": "^3.7.0",
    "codecov": "^3.6.5",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.20.2",
    "nyc": "^15.0.1"
  }
}
